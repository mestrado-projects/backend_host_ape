{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Nodenext",
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "skipLibCheck": true,
    "experimentalDecorators": true,       
    "emitDecoratorMetadata": true,
  }
}
